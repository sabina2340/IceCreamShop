@model IEnumerable<IceCreamShop.Models.Sale>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sales List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: url('/images/фон3.jpg') no-repeat center center fixed;
            background-size: cover;
            margin: 0;
            padding: 20px;
        }

        .container {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #933;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        .btn {
            padding: 8px 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            text-decoration: none;
            font-size: 14px;
        }

        .btn-success {
            background-color: #5cb85c;
            color: white;
            margin-bottom: 20px;
            display: inline-block;
            max-width: 200px;
            width: 100%;
        }

        .btn-primary {
            background-color: #337ab7;
            color: white;
        }

        .btn-danger {
            background-color: #d9534f;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Sales</h2>

        <a href="@Url.Action("Create")" class="btn btn-success">Create New Sale</a>
        <a href="@Url.Action("DownloadSaleData")" class="btn btn-primary">Download Sale Data</a>

        <table>
            <tr>
                <th>Sale ID</th>
                <th>Sale Date</th>
                <th>Total Amount</th>
                <th>Employee ID</th>
                <th>Actions</th>
            </tr>
            @foreach (var sale in Model)
            {
                <tr>
                    <td>@sale.SaleId</td>
                    <td>@sale.SaleDate</td>
                    <td>@sale.TotalAmount</td>
                    <td>@sale.EmployeeId</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = sale.SaleId })" class="btn btn-primary">Edit</a>
                        <form action="@Url.Action("Delete", new { id = sale.SaleId })" method="post" style="display: inline;">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </table>
    </div>
</body>
</html>