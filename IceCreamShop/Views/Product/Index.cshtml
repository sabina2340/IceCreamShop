@model IEnumerable<IceCreamShop.Models.Product>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: url('/images/фон3.jpg') no-repeat center center fixed;
            background-size: cover;
            margin: 0;
            padding: 20px;
        }

        .container {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #933;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        .btn {
            padding: 8px 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            text-decoration: none;
            font-size: 14px;
        }

        .btn-success {
            background-color: #5cb85c;
            color: white;
            margin-bottom: 20px;
            display: inline-block;
            max-width: 200px;
            width: 100%;
        }

        .btn-primary {
            background-color: #ff66b2; /* Розовый цвет */
            color: white;
        }

        .btn-danger {
            background-color: #d9534f;
            color: white;
        }

        form {
            margin-bottom: 20px;
            border: 1px solid #ddd;
            padding: 20px;
            border-radius: 8px;
            background-color: #f9f9f9;
        }

        label {
            display: block;
            margin-bottom: 10px;
            font-weight: bold;
        }

        input[type="number"],
        input[type="text"] {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        button[type="submit"] {
            background-color: #337ab7;
            color: white;
            border: none;
            border-radius: 4px;
            padding: 10px 20px;
            cursor: pointer;
            font-size: 16px;
        }

            button[type="submit"]:hover {
                background-color: #286090;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Products</h2>
        <form asp-action="Index" method="get">
            <div>
                <label for="minPrice">Минимальная цена:</label>
                <input type="number" name="minPrice" id="minPrice" step="0.01" />
            </div>
            <div>
                <label for="maxPrice">Максимальная цена:</label>
                <input type="number" name="maxPrice" id="maxPrice" step="0.01" />
            </div>
            <div>
                <label for="manufacturer">Производитель:</label>
                <input type="text" name="manufacturer" id="manufacturer" />
            </div>
            <button type="submit">Применить фильтры</button>
        </form>

        <a href="@Url.Action("Create")" class="btn btn-success">Create New Product</a>
        <a href="@Url.Action("DownloadProductData")" class="btn btn-primary">Download Product Data</a>
        <table>
            <tr>
                <th>Product ID</th>
                <th>Product Type</th>
                <th>Product Price</th>
                <th>Product Manufacturer</th>
                <th>Product Description</th>
                <th>Product Composition</th>
                <th>Product Weight</th>
                <th>Actions</th>
            </tr>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductId</td>
                    <td>@product.ProductType</td>
                    <td>@product.ProductPrice</td>
                    <td>@product.ProductManufacturer</td>
                    <td>@product.ProductDescription</td>
                    <td>@product.ProductComposition</td>
                    <td>@product.ProductWeight</td>
                    <td style="white-space: nowrap;">
                        <a href="@Url.Action("Edit", new { id = product.ProductId })" class="btn btn-primary" style="padding: 5px 10px; margin-right: 5px; font-size: 14px;">Edit</a>
                        <form action="@Url.Action("Delete", new { id = product.ProductId })" method="post" style="display: inline;">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger" style="padding: 5px 10px; font-size: 14px;">Delete</button>
                        </form>
                    </td>


                </tr>
            }
        </table>
    </div>
</body>
</html>
