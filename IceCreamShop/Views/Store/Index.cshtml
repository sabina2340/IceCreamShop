@model IEnumerable<IceCreamShop.Models.Store>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stores List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: url('/images/фон3.jpg') no-repeat center center fixed;
            background-size: cover;
            margin: 0;
            padding: 20px;
        }

        .container {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #933;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        .btn {
            padding: 8px 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            text-decoration: none;
            font-size: 14px;
        }

        .btn-success {
            background-color: #5cb85c;
            color: white;
            margin-bottom: 20px;
            display: inline-block;
            max-width: 200px;
            width: 100%;
        }

        .btn-primary {
            background-color: #337ab7;
            color: white;
        }

        .btn-danger {
            background-color: #d9534f;
            color: white;
        }

        .filter-form {
            background-color: #f9f9f9;
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
        }

            .filter-form .form-group {
                margin-bottom: 20px;
            }

            .filter-form label {
                font-weight: bold;
            }

            .filter-form .form-control {
                width: 100%;
                padding: 8px;
                border: 1px solid #ccc;
                border-radius: 4px;
            }

            .filter-form button[type="submit"] {
                background-color: #337ab7;
                color: white;
                border: none;
                border-radius: 4px;
                padding: 10px 20px;
                cursor: pointer;
                font-size: 16px;
            }

                .filter-form button[type="submit"]:hover {
                    background-color: #286090;

    </style>
</head>
<body>
    <div class="container">
        <h2>Stores</h2>
        <form asp-action="Index" method="get" class="filter-form">
            <div class="form-group">
                <label for="timetable">Время работы:</label>
                <input type="text" name="timetable" id="timetable" class="form-control" placeholder="Введите время работы" />
            </div>
            <button type="submit" class="btn btn-primary">Применить фильтр</button>
        </form>


        <a href="@Url.Action("Create")" class="btn btn-success">Create New Store</a>
        <a href="@Url.Action("DownloadStoreData")" class="btn btn-primary">Download Store Data</a>
        <table>
            <tr>
                <th>Store ID</th>
                <th>Store Address</th>
                <th>Store Phone</th>
                <th>Store Timetable</th>
                <th>Actions</th>
            </tr>
            @foreach (var store in Model)
            {
                <tr>
                    <td>@store.StoreId</td>
                    <td>@store.StoreAddress</td>
                    <td>@store.StorePhone</td>
                    <td>@store.StoreTimetable</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = store.StoreId })" class="btn btn-primary">Edit</a>
                        <form action="@Url.Action("Delete", new { id = store.StoreId })" method="post" style="display: inline;">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
