@model IceCreamShop.Models.Store

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Store</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: url('/images/фон1.jpg') no-repeat center center fixed; /* Фоновое изображение */
            background-size: cover; /* Растягивание фонового изображения на всю страницу */
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            background-color: rgba(255, 255, 255, 0.7); /* Полупрозрачный белый фон контейнера */
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 400px; /* Максимальная ширина контейнера */
            width: 100%; /* Ширина контейнера равна 100% */
        }

        h2 {
            color: #333;
            margin-bottom: 20px;
        }

        h3, h4 {
            color: #666;
            margin-bottom: 10px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .btn {
            padding: 8px 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            text-decoration: none;
            font-size: 14px;
        }

        .btn-danger {
            background-color: #d9534f;
            color: white;
        }

        .btn-default {
            background-color: #ccc;
            color: #333;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Delete Store</h2>

        <h3>Are you sure you want to delete this store?</h3>

        <div>
            <h4>Store</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.StoreAddress)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.StoreAddress)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.StorePhone)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.StorePhone)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.StoreTimetable)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.StoreTimetable)
                </dd>
                <!-- Добавьте другие поля, если необходимо -->
            </dl>

            @using (Html.BeginForm("Delete", "Store", new { id = Model.StoreId }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
                </div>
            }
        </div>
    </div>
</body>
</html>
